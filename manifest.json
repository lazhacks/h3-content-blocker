{
  "manifest_version": 2,

  "name": "Content Blocker",
  "description": "Get that pesky content outta here!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Content blocker!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
